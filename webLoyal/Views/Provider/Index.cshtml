@model List<core.Service.ListarProveedoresModel>

    <div class="d-md-flex align-items-center justify-content-between mb-4">
        <div>
            <ol class="breadcrumb fs-sm mb-1">
                <li class="breadcrumb-item"><a href="../menu/index">@webLoyal.Resources.language.Resources.Menu</a></li>
                <li class="breadcrumb-item active" aria-current="page">@webLoyal.Resources.language.Resources.Provider</li>
            </ol>
            <h4 class="main-title mb-0">@webLoyal.Resources.language.Resources.Provider</h4>
        </div>
        <div class="d-flex gap-2 mt-3 mt-md-0">

            <a href="../Provider/Create" type="button" class="btn btn-primary d-flex align-items-center gap-2 disabled">Crear<span class="d-none d-sm-inline"> Proveedor</span></a>
        </div>
    </div>
    <div class="card card-one mt-3">
        <div class="card-body p-3">
            <div class="table-responsive">
                <table class="table table-borderless mb-0 dataTable-loading searchable">
                    <thead>
                        <tr>
                            <th>@webLoyal.Resources.language.Resources.ProviderCode</th>
                            <th>@webLoyal.Resources.language.Resources.CompanyNameOfTheProvider</th>
                            <th>@webLoyal.Resources.language.Resources.DescriptionProviderStatus</th>
                            <th>@webLoyal.Resources.language.Resources.DescriptionCountry</th>
                            <th>@webLoyal.Resources.language.Resources.City</th>
                            <th>@webLoyal.Resources.language.Resources.State</th>
                            <th>@webLoyal.Resources.language.Resources.Address</th>
                            <th>@webLoyal.Resources.language.Resources.PhoneNumber</th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count > 0)
                        {

                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td>@claim.CodigoProveedor </td>
                                    <td>@claim.RazonSocialProveedor</td>
                                    @switch (claim.CodigoEstadoProveedor)
                                    {
                                        case "01":
                                            <td> <span class="badge bg-warning"> @claim.DescripcionEstadoProveedor</span> </td>
                                            break;
                                        case "02":
                                            <td> <span class="badge bg-info">@claim.DescripcionEstadoProveedor</span> </td>
                                            break;
                                        case "03":
                                            <td> <span class="badge bg-info">@claim.DescripcionEstadoProveedor</span> </td>
                                            break;
                                        case "04":
                                            <td> <span class="badge text-bg-success"> @claim.DescripcionEstadoProveedor</span> </td>
                                            break;
                                       
                                        default:
                                            <td> <span class="badge bg-info"> @claim.DescripcionEstadoProveedor</span> </td>
                                            break;
                                    }

                                    <td>@claim.DescripcionPais</td>
                                    <td>@claim.Ciudad</td>
                                    <td>@claim.Estado</td>

                                    <td>@claim.Direccion</td>
                                    <td>@claim.Telefono</td>
                                    <td>
                                        <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                                            <div class="btn-group me-2" role="group" aria-label="First group">
                                                <a href="../claims/get/@claim.CodigoProveedor" class="btn btn-sm btn-outline-primary disabled"><i class="ri-pencil-fill"></i></a>
                                            <a href="../claims/delete/@claim.CodigoProveedor" class="btn btn-sm btn-outline-danger disabled"><i class="ri-delete-bin-2-fill"></i></a>
                                            </div>
                                        </div>

                                    </td>

                                </tr>
                            }

                        }

                    </tbody>
                </table>
            </div>
        </div><!-- card-body -->
    </div>

@section scripts{
<script>
        $("table").DataTable({
            searchBuilder: true,
            class: 'table table-borderless mb-0 dataTable-loading searchable dataTable-wrapper no-footer sortable fixed-columns',
            fixedColumns: true,
            order: [[0, "desc"]],
            dom: 'Bfrt<"col-md-6 inline"i> <"col-md-6 inline"p>',
            buttons: [
                {
                    extend: 'excelHtml5',
                    autoFilter: true,
                    className: 'btn btn-outline-primary',
                    filename: '@nameof(core.Service.ProviderModel)+Excel',
                },
                {
                    extend: 'pdfHtml5',
                    className: 'btn btn-outline-primary',
                    filename: '@nameof(core.Service.ProviderModel)+Pdf',
                }
            ]
        });
</script>
}