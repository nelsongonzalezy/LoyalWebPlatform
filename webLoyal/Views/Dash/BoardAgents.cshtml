<div class="col-lg-12 row g-3">

    <div class="card card-one mt-3">
        <div class="card-body p-3">
            <div class="table-responsive">
                <table id="Claimdatatablet" class="table table-borderless mb-0 dataTable-loading searchable">
                    <thead>
                        <tr>
                            <th>AgentsId</th>
                            <th>Name</th>
                           
                            <th>AgentStatus</th>
                            <th>Country</th>
                            <th>Quota</th>
                                <th>Sold</th>
                                <th>Charged</th>
                            <th>Reached</th>
                            <th>Progress</th>
                            <th>Ranting</th>
                           
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count > 0)
                        {

                            @foreach (var agents in Model)
                            {
                                <tr>
                                    <td>@agents.AgentsId </td>
                                    <td>
                                            <div class="d-flex align-items-center gap-2">
                                                <div class="avatar"><img src="@agents.ProfilePhoto" alt=""></div>
                                                <div>
                                                    <h6 class="mb-0">@agents.Name</h6>
                                                        
                                                </div>
                                            </div>
                                    </td>


                                        <td><span class="badge bg-success">@agents.AgentStatus</span></td>
                                        <td>@agents.Country</td>
                                    <td>@agents.Quota</td>
                                    <td>@agents.Reached</td>
                                        <td>@agents.Sold.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("en-US"))</td>
                                        <td>@agents.Charged.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("en-US"))</td>
                                    <td>
                                            <div class="progress ht-5 mb-0">
                                                <div class="progress-bar w-@agents.Quota" role="progressbar" aria-valuenow="@agents.Progress" aria-valuemin="0" aria-valuemax="@agents.Quota"></div>
                                            </div>
                                        
                                        </td>
                                        <td>
                                            <div class="d-flex gap-1 text-warning">
                                                @for (int i = 1; i <= agents.Ranting; i++)
                                                {                                               
                                                    <i class="ri-star-fill"></i>
                                                }
                                                @for (int i = agents.Ranting; i < 5; i++)
                                                {
                                              
                                                        <i class="ri-star-line"></i>
                                                    
                                                }
                                            </div>
                                        </td>
                                    
                                    <td>
                                        <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                                            <div class="btn-group me-2" role="group" aria-label="First group">
                                                <a href="../claims/get/@agents.AgentsId" class="btn btn-sm btn-outline-primary"><i class="ri-pencil-fill"></i></a>
                                                <a href="../claims/delete/@agents.AgentsId" class="btn btn-sm btn-outline-danger"><i class="ri-delete-bin-2-fill"></i></a>
                                            </div>
                                        </div>

                                    </td>

                                </tr>
                            }

                        }

                    </tbody>
                </table>
            </div>
        </div><!-- card-body -->
    </div>
