
<div class="container">

        <div class="d-md-flex align-items-center justify-content-between mb-4">
            <div>
                <ol class="breadcrumb fs-sm mb-1">
                    <li class="breadcrumb-item"><a herf="../menu/Profile"></a>@webLoyal.Resources.language.Resources.Menu</li>
                    <li class="breadcrumb-item"><a herf="../Profile/edit">@webLoyal.Resources.language.Resources.ActiveCertificates</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@webLoyal.Resources.language.Resources.Active</li>
                </ol>
                <h4 class="main-title mb-0"></h4>
            </div>
            <div class="d-flex gap-2 mt-3 mt-md-0">
                
            </div>
        </div>

        <form id="CreateProvider" class="row g-3 col-12" asp-action="nameof(ProviderController.Create)" data-parsley-validate asp-controller="Provider" method="post">
            <div class="col-6">
                <div class="card card-one">
                    <div class="card-body row">

                        <div class="row g-3">
                            <div class="col-6">
                            <label class="form-label">@webLoyal.Resources.language.Resources.Name</label>
                            <input type="text" class="form-control" placeholder="Enter first name" required>
                        
                        </div>
                            <div class="col-6">
                            <label class="form-label">@webLoyal.Resources.language.Resources.LastName</label>
                            <input type="text" class="form-control" placeholder="Enter last name" required>
                        </div>

                        <div class="col">
                            <div class="mb-3">
                            <label for="exampleFormControlInput1" class="form-label">@webLoyal.Resources.language.Resources.Email</label>
                            <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
                        
                        </div>
                        
                        <div class="col-12">
                            <label for="inputaddress" class="form-label"></label>
                            <select id="inputState" class="form-select">
                        
                        </div>
                        <div>
                            <div class="col">
                            <button type="submit" class="btn btn-primary">@webLoyal.Resources.language.Resources.ExpirationDate</button>
                        </div>
                    </div>
                </div> 
             </div>
        </form>

</div>