                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CodigoCotizacion</td>

                                    <td>@item.NombreAgente</td>
                                    @if (item.CodigoEstadoSolicitud == "03")
                                    {<td>
                                            <span class="badge bg-warning" title="aprobado"><i class="ri-checkbox-circle-line"></i>&nbsp @item.DescripcionEstadoSolicitud</span>
                                        </td>
                                    }
                                    @if (item.CodigoEstadoSolicitud == "04")
                                    {
                                        <td>
                                            <span class="badge bg-success" title="aprobado"><i class="ri-checkbox-circle-line"></i>&nbsp @item.DescripcionEstadoSolicitud</span>
                                        </td>
                                    }
                                    @if (item.CodigoEstadoSolicitud == "05")
                                    {<td>
                                            <span class="badge bg-danger" title="aprobado"><i class="ri-checkbox-circle-line"></i>&nbsp @item.DescripcionEstadoSolicitud</span>
                                        </td>
                                    }
                                    @if (item.CodigoEstadoSolicitud == "06")
                                    {<td>
                                            <span class="badge bg-info" title="aprobado"><i class="ri-checkbox-circle-line"></i>&nbsp @item.DescripcionEstadoSolicitud</span>
                                        </td>
                                    }

                                    <td>@item.DescripcionProducto</td>
                                    <td>@item.FechaSolicitud.ToString("MM-dd-yyyy")</td>
                                    <td>@item.DescripcionPais</td>
                                    <td>@item.DescripcionPlan</td>
                                   
                                    <td>
                                        <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                                            <div class="btn-group me-2" role="group" aria-label="First group">
                                                <a href="../requestmonitor/detail" class="btn btn-sm btn-outline-primary"><i class="ri-pencil-fill"></i></a>

                                            </div>
                                        </div>

                                    </td>

                                </tr>

                            }

