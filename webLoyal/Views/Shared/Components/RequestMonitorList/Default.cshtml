@model List<core.Service.RequestMonitorDetailModel>

<div class="row g-3">
    <div class="col-xl-12">
        <div class="card card-one mt-3">
            <div class="card-body p-3">
                <div class="table-responsive">
                    <table class="table table-borderless mb-0 dataTable-loading searchable">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>@webLoyal.Resources.language.Resources.Agent</th>
                                <th>@webLoyal.Resources.language.Resources.State</th>
                                <th>@webLoyal.Resources.language.Resources.Product</th>
                                <th>@webLoyal.Resources.language.Resources.EffectiveStartDate</th>
                                <th>@webLoyal.Resources.language.Resources.CountryDescription</th>
                                <th>@webLoyal.Resources.language.Resources.PlanCode</th>
                                
