                        <li class="breadcrumb-item"><a href="~/Policies/index">Polizas</a></li>
                        <li class="breadcrumb-item"><a href="~/Lives/index">Vidas</a></li>

                    </ol>
                <h4 class="main-title mb-0">Vidas</h4>
                </div>

            </div>
<div class="row g-3">
    <div class="col-xl-12">

            @await Component.InvokeAsync("PoliciesLivesList")
              
    </div>

    <div class="col-xl-12">
        <div class="card">
