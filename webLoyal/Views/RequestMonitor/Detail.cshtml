@model List<core.Service.RequestMonitorDetailModel>


        <div class="d-md-flex align-items-center justify-content-between mb-4">
            <div>
                <ol class="breadcrumb fs-sm mb-1">
                    <li class="breadcrumb-item"><a href="~/menu/index">@webLoyal.Resources.language.Resources.Menu</a></li>
                    <li class="breadcrumb-item active"><a href="~/requestmonitor/index">Monitor de Solicitudes</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Details</li>
                </ol>
                <h4 class="main-title mb-0"></h4>
            </div>

        </div>

          @foreach (var item in Model)
        {
            <div class="col-12 ">
                <ul class="nav nav-pills nav-fill">
                    <li class="nav-item"><a class="nav-link active"><p class="d-block mb-1 ls--1 fs-31 fw-big text-white">Solicitud # @item.CodigoSolicitud : </p></a></li>
                </ul>
            </div>
            <br />
            <div class="row g-3">
                <div class="col-6">
                    <div class="row g-3">
                        <div class="col-md-4 col-xl-4">
                            <div class="card">
                                <div class="card-body p-3">
                                    <div class="d-flex align-items-center fw-medium text-primary mb-1"><i class="ri-calendar-check-line fs-40 lh-1 me-2"></i> Estado</div>
                                    <label class="d-block mb-1 fw-medium text-dark">
                                        <p>Efectividad</p>
                                        @switch (item.CodigoEstadoSolicitud)
                                        {
                                            case "01":
                                                <p class="badge bg-info" title="@item.DescripcionEstadoSolicitud"><i class="ri-error-warning-line"></i>&nbsp @item.DescripcionEstadoSolicitud</p>
                                                break;
                                            case "02":
                                                <p class="badge bg-warning" title="@item.DescripcionEstadoSolicitud"><i class="ri-error-warning-line"></i>&nbsp @item.DescripcionEstadoSolicitud</p>
                                                break;
                                            case "04":
                                                <p class="badge bg-success" title="@item.DescripcionEstadoSolicitud"><i class="ri-checkbox-circle-line"></i>&nbsp @item.DescripcionEstadoSolicitud</p>
                                                break;
                                            case "05":
                                                <p class="badge bg-danger" title="@item.DescripcionEstadoSolicitud"><i class="ri-close-circle-line"></i>&nbsp @item.DescripcionEstadoSolicitud</p>
                                                break;
                                            case "03":
                                                <p class="badge bg-secondary"><span class="spinner-border spinner-border-sm" role="status" title="@item.DescripcionEstadoSolicitud"></span> &nbsp @item.DescripcionEstadoSolicitud</p>

                                                break;
                                            case "06":
                                                <p class="badge bg-danger" title="@item.DescripcionEstadoSolicitud"><i class="ri-add-circle-line"></i>&nbsp @item.DescripcionEstadoSolicitud</p>
                                                break;
                                            default:
                                                <p class="ri-error-warning-line" title="@item.DescripcionEstadoSolicitud">&nbsp @item.DescripcionEstadoSolicitud</p>
                                                break;
                                        }
                                        <p>@item.DescripcionPais</p>
                                        <p>Transplante de Organos</p>
                                        <p>Maternidad </p>
                                    </label>
                                </div><!-- card-body -->
                            </div><!-- card -->
                        </div><!-- col -->
                        <div class="col-md-4 col-xl-4">
                            <div class="card">
                                <div class="card-body p-3">
                                    <div class="d-flex align-items-center fw-medium text-primary mb-1"><i class="ri-file-list-3-line fs-40 lh-1 me-2"></i>Producto</div>
                                    <label class="d-block mb-1 fw-medium text-dark">
                                        <p>@item.DescripcionProducto</p>
                                        <p>@item.DescripcionPlan</p>
                                        <p>@item.DescripcionPoliza</p>
                                    </label>
                                </div><!-- card-body -->
                            </div><!-- card -->
                        </div><!-- col -->
                        <div class="col-md-4 col-xl-4">
                            <div class="card">
                                <div class="card-body p-3">
                                    <div class="d-flex align-items-center fw-medium text-primary mb-1"><i class="ri-user-2-line fs-40 lh-1 me-2"></i>Agente</div>
                                    <label class="d-block mb-1 fw-medium text-dark">
                                        <p><a href="~/agents/detail/@item.CodigoAgente">@item.NombreAgente </a></p>
                                       
                                    </label>
                                </div><!-- card-body -->
                            </div><!-- card -->
                        </div><!-- col -->

                    </div>
                    <br />
                    <div class="row g-3">
                        <ul class="nav nav-pills nav-fill">
                            <li class="nav-item"><a class="nav-link active">Informacion del los Solicitantes</a></li>
                        </ul>
                    </div>
                    <br />


                </div>
                <div class="col-6">
                    @await Component.InvokeAsync("Tracking",item.CodigoSolicitud.ToString())
                </div>

            </div>
            }